<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>

    <!-- Daniel Ortiz-Chaves-->
    <link rel="stylesheet" type="text/css" href="/stylesheets/lists.css" />
</head>

<body>
    <%- include("../partials/navbar") %>
    <%- include("../partials/flash") %>
    
    <h3>Adding to your reading list</h3>
    <br>
    <div>
        <table class="table table-striped table-responsive fixed-table-body w-auto">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                </tr>
            </thead>
            <tbody>
                <% for(let book of books) {%>
                    <tr>
                        <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
                        <td><a href="/authors/<%= book.author_id %>"><%= book.author_id %></a></td>
                        <td><a href="/lists/addRead/<%= book.id %>" class="btn btn-secondary">Add</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>


    <%- include("../partials/footer") %>
</body>

</html>