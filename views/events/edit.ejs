<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/events.css" />
</head>

<body>
    <%- include("../partials/navbar") %>
    <%- include("../partials/flash") %>

    <!-- Add HTML body here. -->
    <div class="container">
        <h1 class="text-center">Edit Event</h1>
        <form action="/events/<%= event.id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Event Name</label>
                <input class="form-control" type="text" id="name" name="name" value="<%= event.name %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="description" required><%= event.description %></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Date</label>
                <textarea class="form-control" type="date" id="date" name="date" required></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Edit Event</button>
            </div>
        </form>

        <form action="/events/<%= event.id %>?_method=DELETE" method="POST">
            <div class="mb-3">
                <button class="btn btn-danger">Delete Event</button>
            </div>
        </form>
    </div>

    <%- include("../partials/footer") %>
</body>

</html>
